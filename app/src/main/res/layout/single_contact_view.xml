<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
   android:id="@+id/ll_contactView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <LinearLayout
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/baseline_account_circle_white_36"
                    android:layout_weight="0.3"
                    android:id="@+id/iv_conatctImage"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />

                <LinearLayout
                    android:layout_weight="2.4"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                        <app.com.loyaltyapp.bounty.utils.ComicTextView
                            android:layout_margin="5dp"
                            android:id="@+id/tvContactName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:text="Name"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <app.com.loyaltyapp.bounty.utils.ComicTextView
                            android:layout_margin="5dp"
                            android:id="@+id/tvContactNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:text="+1223244444"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                </LinearLayout>

        <CheckBox
            android:gravity="right|center_horizontal"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:id="@+id/iv_selectContact"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            />

        </LinearLayout>


</RelativeLayout>